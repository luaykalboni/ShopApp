@model IEnumerable<ShopApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<div class="input-group mb-3">
    <input type="text" data-action="filter_auto_complete" class="form-control" placeholder="Search product">
</div>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card col-3" style="width: 18rem;">
                <img src="@item.imagePath" class="card-img-top" alt="...">

                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price:@item.Price $</p>
                    <a href="/Products/Details/@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
           
        }
    </div>
</div>
